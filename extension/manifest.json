{
  "manifest_version": 3,
  "name": "Save to QuickMark",
  "version": "1.0.0",
  "description": "Save bookmarks to your personal QuickMark instance",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Save to QuickMark"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
